@using HNFCRM_Chat.Models;
<!DOCTYPE html>
<html lang="en">

<head>
    @*<title>HNF-Contract Detail</title>*@
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    <!-- Datetime Picker CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/locales/bootstrap-datepicker.vi.min.js" integrity="sha256-TnMvef6AxT9fg6mNrTsZCgPDkU4g5EyB+tu66oLAI4U=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.min.css">
    <!-- Google Icon CDN -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- custom CSS & Jquery modify URL -->
    <link rel="stylesheet" href="~/Content/HNFStyle.css">
    <script src="~/Scripts/HNF-jquery.js"></script>
</head>

<body>
    <!--===== TOPBAR =====-->
    <nav class="navbar fixed-top navbar-toggleable-md navbar-light bg-faded">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand" href="@Url.Action("Index","Home")">HNF COMPANY</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <form class="form-inline my-2 my-xl-0 ml-auto">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="material-icons">notifications</i>Thông Báo</a>
                    </li>
                    <li class="nav-item">
                        @{
                            var author = Session["author"] as STAFF;
                        }
                        <a class="nav-link hnf-nav-link" href="@Url.Action("Information", "Staff")">
                            <i class="material-icons">account_circle</i>@author.Name
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link hnf-nav-link " href='@Url.Action("Logout", "Login")'><i class="material-icons ">exit_to_app</i>Đăng Xuất</a>
                    </li>
                    <div class="dropdown-divider"></div>
                    <div id="sidebar-top-menu">
                        <ul class="navbar-nav">
                            <h6 class="dropdown-header">ĐỊNH TUYẾN</h6>
                            @{
                                var a = Session["Role"] as STAFF;
                            }
                            @if (a.ID_Role == 1 || a.ID_Role == 2 || a.ID_Role == 3)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href='@Url.Action("Index", "Home")'><i class="material-icons md-18">dashboard</i>Trang Chủ</a>
                                </li>
                            }
                            @if (a.ID_Role == 1 || a.ID_Role == 2 || a.ID_Role == 3)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href='@Url.Action("Customer", "Customer")'><i class="material-icons md-18">perm_contact_calendar</i>Khách Hàng</a>
                                </li>
                            }
                            @if (a.ID_Role == 1 || a.ID_Role == 4)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("ProductionLine", "ProductionLine")"><i class="material-icons md-18">settings_applications</i>Sản Xuất</a>
                                </li>
                            }
                            @if (a.ID_Role == 1)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Statistic","Statistic")"><i class="material-icons md-18">pie_chart</i>Thống Kê</a>
                                </li>
                            }
                            @if (a.ID_Role == 1 || a.ID_Role == 3)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="#"><i class="material-icons md-18">chat</i>Chat</a>
                                </li>
                            }
                            @if (a.ID_Role == 1)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Staff", "Staff")"><i class="material-icons md-18">supervisor_account</i>Nhân Viên</a>
                                </li>
                            }
                            @if (a.ID_Role == 1 || a.ID_Role == 3)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="#"><i class="material-icons md-18">child_care</i>Chăm Sóc Khách Hàng</a>
                                </li>
                            }
                        </ul>
                    </div>
                </ul>
            </form>
        </div>
    </nav>

    <div id="wrapper">
        <!-- Side Navigation -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                @if (a.ID_Role == 1 || a.ID_Role == 2 || a.ID_Role == 3)
                {
                    <li><a href="@Url.Action("Index", "Home")"><i class="material-icons md-18">dashboard</i>TRANG CHỦ</a></li>
                }
                @if (a.ID_Role == 1 || a.ID_Role == 2 || a.ID_Role == 3)
                {
                    <li><a href="@Url.Action("Customer", "Customer") "><i class="material-icons md-18">perm_contact_calendar</i>KHÁCH HÀNG</a></li>
                }
                @if (a.ID_Role == 1 || a.ID_Role == 4)
                {
                    <li><a href="@Url.Action("ProductionLine", "ProductionLine")"><i class="material-icons md-18">settings_applications</i>SẢN XUẤT</a></li>
                }
                @if (a.ID_Role == 1)
                {
                    <li><a href="@Url.Action("Statistic","Statistic")"><i class="material-icons md-18">pie_chart</i>THỐNG KÊ</a></li>
                }
                @if (a.ID_Role == 1 || a.ID_Role == 3)
                {
                    <li><a href="#"><i class="material-icons md-18">chat</i>CHAT</a></li>
                }
                @if (a.ID_Role == 1)
                {
                    <li><a href="@Url.Action("Staff", "Staff")"><i class="material-icons md-18">supervisor_account</i>NHÂN VIÊN</a></li>
                }
                @if (a.ID_Role == 1 || a.ID_Role == 3)
                {
                    <li><a href="#"><i class="material-icons md-18">child_care</i>CHĂM SÓC KHÁCH HÀNG</a></li>
                }
            </ul>
        </div>
        <!--===== end of [SIDERBAR] =====-->

        @RenderBody()
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/HNF-jquery.js")
        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
