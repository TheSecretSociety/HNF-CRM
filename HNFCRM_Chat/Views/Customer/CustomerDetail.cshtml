@using HNFCRM_Chat.Models;
@model CustomerModel

<link rel="stylesheet" href="~/Content/HNFStyle.css">
<!--===== PAGE CONTENT =====-->
<div id="page-content-wrapper">
    <div class="page-content">
        <div class="container-fluid">
            <!--===== DIVIDER =====-->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xm-12">
                    <div id="divider"></div>
                </div>
            </div>
            <!--===== end of [DIVIDER] =====-->
            @using (Html.BeginForm("CustomerDetail", "Customer", FormMethod.Post, new { id = Model.Customer.ID }))
            {
                <div class="row">
                    <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 col-xm-8">
                        <div class="form-input-background">
                            <h3>THÔNG TIN KHÁCH HÀNG</h3>

                            <div class="row">
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xm-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Họ Tên</label>
                                        <input type="text" class="form-control" id="InputName" aria-describedby="emailHelp" name="name" value="@Model.Customer.Name" />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Số Điện Thoại</label>
                                        <input type="text" class="form-control" id="InputPhone" aria-describedby="emailHelp" name="phone" value="@Model.Customer.Phone" />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email</label>
                                        <input type="text" class="form-control" id="InputEmail" aria-describedby="emailHelp" name="email" value="@Model.Customer.Email" />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Thông Tin Công Ty</label>
                                        <input type="text" class="form-control" id="InputCompany" aria-describedby="emailHelp" name="company" value="@Model.Customer.Company" />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Ngành Nghề</label>
                                        <input type="text" class="form-control" id="InputJob" aria-describedby="emailHelp" name="job" value="@Model.Customer.Job" />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Địa Chỉ</label>
                                        <input type="text" class="form-control" id="InputAddress" aria-describedby="emailHelp" name="address" value="@Model.Customer.Address" />
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleSelect1">Tình Trạng Tư Vấn</label>
                                        <select class="form-control" id="exampleSelect1">
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xm-6">
                                    <div class="form-group">
                                        <label for="exampleTextarea">Quan tâm về Dịch Vụ / Sản Phẩm gì?</label>
                                        <textarea class="form-control" id="InterestedIn" rows="5"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Loại Áo Đã Làm</label>
                                        <input type="text" class="form-control" id="PreviousDesign" aria-describedby="emailHelp" value="@Model.Customer.PreviousDesign" name="previousdesign">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Loại Vải</label>
                                        <input type="text" class="form-control" id="PreviousFabric" aria-describedby="emailHelp" value="@Model.Customer.PreviousFabric" name="previousfabric">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Giá Thành</label>
                                        <input type="text" class="form-control" id="PreviousPrice" aria-describedby="emailHelp" value="@Model.Customer.PreviousPrice" name="previousprice">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Nhận Xét</label>
                                        <input type="text" class="form-control" id="PreviousComment" aria-describedby="emailHelp" value="@Model.Customer.Comment" name="previouscomment">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Công Ty Đã Thực Hiện</label>
                                        <input type="text" class="form-control" id="PreviousCompany" aria-describedby="emailHelp" value="@Model.Customer.PreviousCompanyDesign" name="previouscompany">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleTextarea">Ghi Chú</label>
                                <textarea class="form-control" id="Note" rows="3" value="@Model.Customer.Note" name="customernote"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-xm-4">
                        <div class="form-input-background">
                            <h3>THÔNG TIN SẢN PHẨM</h3>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Loại Áo</label>
                                <input type="text" class="form-control" id="InputStyle" aria-describedby="emailHelp" value="@Model.RequireProduct.ShirtType" name="shirttype">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Loại Vải</label>
                                <input type="text" class="form-control" id="InputFabric" aria-describedby="emailHelp" value="@Model.RequireProduct.RequireFabric" name="fabric">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Mục Đích Sử Dụng</label>
                                <input type="text" class="form-control" id="InputPurpose" aria-describedby="emailHelp" value="@Model.RequireProduct.Purpose" name="purpose">
                            </div>
                            <div class="row">
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xm-6">
                                    <div class="form-group">
                                        <label for="exampleSelect1">Đã Có Thiết Kế ?</label>
                                        <select class="form-control" id="InputDesignYet" name="isanydesign" )>
                                            @{ if (Model.RequireProduct.AnyDesignYet == true)
                                                {
                                                    <option>Rồi</option>
                                                }
                                                else
                                                {
                                                    <option>Chưa</option>
                                                }
                                                if (Model.RequireProduct.AnyDesignYet == true)
                                                {
                                                    <option>Chưa</option>
                                                }
                                                else
                                                {
                                                    <option>Rồi</option>
                                                }
                                            }
                                        </select>

                                    </div>

                                </div>

                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xm-6">
                                    <div class="form-group">
                                        <label for="exampleSelect1">Màu Sắc</label>
                                        <select class="form-control" id="InputColor">
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">In / Thêu ?</label>
                                <input type="text" class="form-control" id="InputPrintEmbroider" aria-describedby="emailHelp" value="@Model.RequireProduct.PrintAndEmbroider" name="printembroider">
                            </div>
                            <div class="row">
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xm-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Số Lượng</label>
                                        <input type="text" class="form-control" id="InputQuantity" aria-describedby="emailHelp" value="@Model.RequireProduct.Quantity" name="quantity">
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xm-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Tầm Giá</label>
                                        <input type="text" class="form-control" id="InputPrice" aria-describedby="emailHelp" value="@Model.RequireProduct.Price" name="price">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleTextarea">Ghi Chú</label>
                                <textarea class="form-control" id="InputRequireNote" rows="3" name="requirenote" value="@Model.RequireProduct.Note"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg btn-block" onclick="location.href='@Url.Action("CustomerDetail", "Customer")'">Lưu Thông Tin</button>
                        </div>
                    </div>
                </div>
                                                }
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xm-12">
                    <div id="divider"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xm-12">
                    <div class="form-input-background">
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Contract", "Contract", new { id =Model.Customer.ID })'">Giao Dịch</button>
                            <button type="button" class="btn btn-danger">Xoá Giao Dịch</button>
                            <button type="button" class="btn btn-warning">Sửa Nhanh</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
