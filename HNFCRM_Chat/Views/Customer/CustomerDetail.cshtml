@using HNFCRM_Chat.Models;
@model CUSTOMER
<link rel="stylesheet" href="~/Content/HNFStyle.css">
<!--===== PAGE CONTENT =====-->
<div id="page-content-wrapper">
    <div class="page-content">
        <div class="container-fluid">
            <!--===== DIVIDER =====-->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xm-12">
                    <div id="divider"></div>
                </div>
            </div>
            <!--===== end of [DIVIDER] =====-->
            <div class="row">
                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 col-xm-8">
                    <div class="form-input-background">
                        <h3>THÔNG TIN KHÁCH HÀNG</h3>
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xm-6">
                                <form>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Họ Tên</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Model.Name">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Số Điện Thoại</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Model.Phone">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Email</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Model.Email">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Thông Tin Công Ty</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Model.Company">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Ngành Nghề</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Model.Job">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Địa Chỉ</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Model.Address">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleSelect1">Tình Trạng Tư Vấn</label>
                                        <select class="form-control" id="exampleSelect1">
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                        </select>
                                    </div>
                                </form>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xm-6">
                                <form>
                                    <div class="form-group">
                                        <label for="exampleTextarea">Quan tâm về Dịch Vụ / Sản Phẩm gì?</label>
                                        <textarea class="form-control" id="exampleTextarea" rows="5"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Loại Áo Đã Làm</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Model.PreviousDesign">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Loại Vải</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Model.PreviousFabric">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Giá Thành</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Model.PreviousPrice">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Nhận Xét</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Model.Note">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Công Ty Đã Thực Hiện</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="@Model.PreviousCompanyDesign">
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleTextarea">Ghi Chú</label>
                            <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-xm-4">
                    <div class="form-input-background">
                        <h3>THÔNG TIN SẢN PHẨM</h3>
                        <form>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Loại Áo</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Loại Vải</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Mục Đích Sử Dụng</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="">
                            </div>
                            <div class="row">
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xm-6">
                                    <div class="form-group">
                                        <label for="exampleSelect1">Đã Có Thiết Kế Chưa ?</label>
                                        <select class="form-control" id="exampleSelect1">
                                            <option>Rồi</option>
                                            <option>Chưa</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xm-6">
                                    <div class="form-group">
                                        <label for="exampleSelect1">Màu Sắc</label>
                                        <select class="form-control" id="exampleSelect1">
                                            <option>1</option>
                                            <option>2</option>
                                            <option>3</option>
                                            <option>4</option>
                                            <option>5</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">In / Thêu ?</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="">
                            </div>
                            <div class="row">
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xm-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Số Lượng</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="">
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xm-6">
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Tầm Giá</label>
                                        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleTextarea">Ghi Chú</label>
                                <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
                            </div>
                        </form>
                        <button type="button" class="btn btn-primary btn-lg btn-block">Lưu Thông Tin</button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xm-12">
                    <div id="divider"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xm-12">
                    <div class="form-input-background">
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <button type="button" class="btn btn-success">Thêm Giao Dịch</button>
                            <button type="button" class="btn btn-danger">Xoá Giao Dịch</button>
                            <button type="button" class="btn btn-warning">Sửa Nhanh</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
