                                </th>
                                <th>HỌ VÀ TÊN</th>
                                <th>CÔNG TY</th>
                                <th>EMAIL</th>
                                <th>ĐIỆN THOẠI</th>
                                <th>TƯ VẤN</th>
                                <th>GỌI NHẮC</th>
                                <th>TÊN SALE</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ foreach (var item in Model)
                                {
                                    <tr class="table-success">
                                        <th scope="row">
                                            <input type="button" aria-label="Checkbox for following text input" value="x" onclick="location.href='@Url.Action("DeleteCustomer", "Customer", new
                                                                                                                                                    {
                                                                                                                                                        id = item
                                                                                                                                                    .ID
                                                                                                                                                    })'">
                                        </th>
                                        <td>@item.Name</td>
                                        <td>@item.Company</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@item.Job</td>
                                        <td>mdo</td>
                                        <td>@item.ID_Consult</td>
                                        <td><a href="@Url.Action("CustomerDetail","Customer",new { id=item.ID})"><button type="button" class="btn btn-sm btn-info">i</button></a></td>
                                    </tr>
                                }
                            }
