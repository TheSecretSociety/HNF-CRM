@model HNFCRM_Chat.Models.CustomerModel
<link rel="stylesheet" href="~/Content/HNFStyle.css">

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Customer</title>
</head>
<div id="page-content-wrapper">
    <div class="page-content">
        <div class="container-fluid">
            <br>
            <!-- Thanh Chức Năng -->
            <div class="row">
                <!-- Nút Chức Năng -->
                <div class="col-xl-4 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card form-input-margin">
                        <div class="btn-group" role="group" aria-label="Function Button">
                            <button type="button" class="btn btn-success w-100" onclick="location.href='@Url.Action("AddCustomer","Customer")'">Thêm Khách Hàng</button>
                        </div>
                    </div>
                </div>
                <!-- Thanh Lọc -->
                <div class="col-xl-8 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card form-input-margin">
                        @using (Html.BeginForm("SearchCustomer", "Customer", FormMethod.Post))
                        {
                            <div class="row">
                                <!-- Họ Tên -->
                                <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-xs-12 mb-2 mb-xl-0">
                                    <input id="HNF-input" type="text" name="SearchName" placeholder="Tên">
                                </div>
                                <!-- Số Điện Thoại -->
                                <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-xs-12 mb-2 mb-xl-0">
                                    <input id="HNF-input" type="text" name="SearchPhone" placeholder="Số Điện Thoại">
                                </div>
                                <!-- Email -->
                                <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-xs-12 mb-2 mb-xl-0">
                                    <input id="HNF-input" type="text" name="SearchEmail" placeholder="Email">
                                </div>
                                <!-- Nút Tìm Kiếm -->
                                <div class="col-xl-3 col-lg-2 col-md-12 col-sm-12 col-xs-12 mb-2 mb-xl-0">
                                    <button type="submit" class="btn btn-block btn-warning search-button" onclick="location.href='@Url.Action("SearchCustomer", "Customer")'">Tìm Kiếm</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <br>
            <!-- Thanh Nhân Viên -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center w-100">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item "><a class="page-link" href="#">Tấn Lộc</a></li>
                            <li class="page-item "><a class="page-link" href="#">Tấn Hưng</a></li>
                            <li class="page-item "><a class="page-link" href="#">Anh Minh</a></li>
                            <li class="page-item "><a class="page-link" href="#">Đức Thuận</a></li>
                            <li class="page-item "><a class="page-link" href="#">Hoàng Nguyễn</a></li>
                            <li class="page-item "><a class="page-link" href="#">Bảo Huy</a></li>
                            <li class="page-item "><a class="page-link" href="#">Phú Thạnh</a></li>
                            <li class="page-item ">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            <br>
            <!-- Bản Khách Hàng -->
            <div class="row">
                <div class="col-12">
                    <table class="table table-sm table-hover">
                        <thead class="thead">
                            <tr>
                                <th>
                                    Xóa
                                </th>
                                <th>HỌ VÀ TÊN</th>
                                <th>CÔNG TY</th>
                                <th>EMAIL</th>
                                <th>ĐIỆN THOẠI</th>
                                <th>TƯ VẤN</th>
                                <th>GỌI NHẮC</th>
                                <th>TÊN SALE</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{if (Model.customer != null)
                                {
                                    foreach (var item in Model.customer)
                                    {
                                        <tr class="">
                                            <th scope="row">
                                                <a type="button" aria-label="Checkbox for following text input" onclick="return confirm('Chắc chắn xóa?')" href='@Url.Action("DeleteCustomer", "Customer", new
                                                                                                                                                            {
                                                                                                                                                                id = item
.ID
                                                                                                                                                            })'>x</a>
                                            </th>
                                            <td>@item.Name</td>
                                            <td>@item.Company</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            @{ if (item.ID_Consult.Value == 1)
                                                {
                                                    <td>Gọi Điện Thoại</td>
                                                }
                                                else if (item.ID_Consult.Value == 2)
                                                {
                                                    <td>Gửi Email</td>
                                                }
                                                else if (item.ID_Consult.Value == 3)
                                                {
                                                    <td>Gặp Mặt</td>
                                                }
                                                else
                                                {
                                                    <td>Gửi Mẫu</td>
                                                }
                                            }

                                            @{var contract = Model.contract.Where(x => x.ID_Customer == item.ID).Single();}
                                            @{if (contract != null)
                                                {
                                                    if (int.Parse(contract.Remind) == 0)
                                                    {
                                                        <td>Lần 1</td>
                                                    }
                                                    else if (int.Parse(contract.Remind) == 1)
                                                    {
                                                        <td>Lần 2</td>
                                                    }
                                                    else if (int.Parse(contract.Remind) == 2)
                                                    {
                                                        <td>Lần 3</td>
                                                    }
                                                    else
                                                    {
                                                        <td>Chưa Gọi</td>
                                                    }
                                                }
                                                else
                                                {
                                                    <td>Chưa có thông tin</td>
                                                }
                                            }
                                            @{var staff = Model.staff.Where(x => x.ID == contract.ID_Staff).FirstOrDefault(); }
                                            @{ if (staff != null)
                                                {
                                                    <td>@staff.Name</td>
                                                }
                                                else
                                                {
                                                    <td>Chưa có thông tin</td>
                                                }
                                            }
                                            <td><a href="@Url.Action("CustomerDetail", "Customer", new { id = item.ID })"><button type="button" class="btn btn-sm btn-info">i</button></a></td>
                                        </tr>
                                                    }
                                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function ($) {
        var url = window.location.href;
        var activePage = url;
        $('.sidebar-nav a').each(function () {
            var linkPage = this.href;
            if (activePage == linkPage) {
                $(this).closest("li").addClass("sidebar-active");
            }
        });
    });
</script>