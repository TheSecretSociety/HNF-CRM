@model IEnumerable<HNFCRM_Chat.Models.CUSTOMER>

    <link rel="stylesheet" href="~/Content/HNFStyle.css">

    <div id="page-content-wrapper">
        <div class="page-content">
            <div class="container-fluid">
                <!--===== DIVIDER =====-->
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xm-12">
                        <div id="divider"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xm-12">
                        <div id="customer-function-bar">
                            <div class="btn-group btn-group-md" role="group" aria-label="...">
                                <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("AddCustomer","Customer")'">Thêm</button>
                                <button type="button" class="btn btn-warning">Sửa Nhanh</button>
                                <button type="button" class="btn btn-danger" @*onclick="location.href='@Url.Action("DeleteCustomer","Customer",new {id= })'*@">Xoá</button>
                            </div>
                            <div class="btn-group btn-group-md" role="group" aria-label="...">
                                <div class="dropdown">
                                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Tháng
                                    </button>
                                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="#">Tháng 1</a>
                                        <a class="dropdown-item" href="#">Tháng 2</a>
                                        <a class="dropdown-item" href="#">Tháng 3</a>
                                        <a class="dropdown-item" href="#">Tháng 4</a>
                                        <a class="dropdown-item" href="#">Tháng 5</a>
                                        <a class="dropdown-item" href="#">Tháng 6</a>
                                        <a class="dropdown-item" href="#">Tháng 7</a>
                                        <a class="dropdown-item" href="#">Tháng 8</a>
                                        <a class="dropdown-item" href="#">Tháng 9</a>
                                        <a class="dropdown-item" href="#">Tháng 10</a>
                                        <a class="dropdown-item" href="#">Tháng 11</a>
                                        <a class="dropdown-item" href="#">Tháng 12</a>
                                    </div>
                                    <input id="HNF-input" type="text" name="FirstName" placeholder="Tên">
                                    <input id="HNF-input" type="text" name="FirstName" placeholder="Số Điện Thoại">
                                    <input id="HNF-input" type="text" name="FirstName" placeholder="Email">
                                    <button type="button" class="btn btn-info">Tìm Kiếm</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xm-12">
                        <div id="divider"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xm-12">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination justify-content-center ">
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">Lộc Ngô</a></li>
                                <li class="page-item"><a class="page-link" href="#">Hưng Nguyễn</a></li>
                                <li class="page-item"><a class="page-link" href="#">Minh Nguyễn</a></li>
                                <li class="page-item"><a class="page-link" href="#">Thuận Nguyễn</a></li>
                                <li class="page-item"><a class="page-link" href="#">Nguyễn Lê</a></li>
                                <li class="page-item"><a class="page-link" href="#">Huy Diệp</a></li>
                                <li class="page-item"><a class="page-link" href="#">Thạnh Lê</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12">
                        <table class="table table-sm table-hover">
                            <thead class="thead">
                                <tr>
                                    <th>
                                        <input type="checkbox" aria-label="Checkbox for following text input">
                                    </th>
                                    <th>HỌ VÀ TÊN</th>
                                    <th>CÔNG TY</th>
                                    <th>EMAIL</th>
                                    <th>ĐIỆN THOẠI</th>
                                    <th>TƯ VẤN</th>
                                    <th>GỌI NHẮC</th>
                                    <th>TÊN SALE</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ foreach (var item in Model)
                                    {
                                        <tr class="table-success">
                                            <th scope="row">
                                                <input type="checkbox" aria-label="Checkbox for following text input" value="@item.ID">
                                            </th>
                                            <td>@item.Name</td>
                                            <td>@item.Company</td>
                                            <td>@item.Email</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Job</td>
                                            <td>mdo</td>
                                            <td>@item.ID_Consult</td>
                                            <td><a href="@Url.Action("CustomerDetail","Customer",new { id=item.ID})"><button type="button" class="btn btn-sm btn-info">i</button></a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
