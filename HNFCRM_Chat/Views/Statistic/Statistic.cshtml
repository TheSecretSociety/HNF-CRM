
<head>
    <title>HNF-Statistic</title>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    <!-- Datetime Picker CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/locales/bootstrap-datepicker.vi.min.js" integrity="sha256-TnMvef6AxT9fg6mNrTsZCgPDkU4g5EyB+tu66oLAI4U=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.min.css">
    <!-- Google Icon CDN -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Datetime Picker (SandBox) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.js"></script>
    <script scr="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.js"></script>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <!-- custom CSS & Jquery modify URL -->
    <link rel="stylesheet" href="~/Content/HNFStyle.css">
    <script src="~/Scripts/HNF-jquery.js"></script>
</head>


<div id="page-content-wrapper">
    <div class="page-content">
        <div class="container-fluid">
            <br>
            <form action="@Url.Action("Statistic", "Statistic")" method="post">
                <div class="card">
                    <div class="card-block">
                        <div class="row">
                            <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-xs-12 col-12 mb-xl-0 mb-lg-0 mb-2">
                                <div class="input-group">
                                    <input type="text" class="form-control" aria-label="Text input with checkbox" placeholder="Thời Gian" readonly>
                                </div>
                            </div>
                            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-xs12mb-xl-0 mb-lg-0 mb-2">
                                <input type="text" class="input-sm form-control" placeholder="Tháng thống kê (mm)" name="month" />

                            </div> 
                            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-xs12 mb-xl-0 mb-lg-0 mb-2">
                                <input type="text" class="input-sm form-control" placeholder="Năm thống kê (yyyy)" name="year" />
                            </div>
                            <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-xs-12 col-12 mb-xl-0 mb-lg-0 mb-2">
                                <button type="submit" class="btn btn-success btn-block" role="button" href="@Url.Action("Statistic", "Statistic")">Thống kê</button>
                                @{
                                    if (TempData["notice"] != null)
                                    {
                                        <p style="color: red">@TempData["notice"]</p>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <br>
            <div class="row">
                <div class="col-xl-12">
                    <div class="card form-input-margin">
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="row">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6 mb-2 mb-sm-0">
                                        <div class="card-deck">
                                            <div class="card card-info text-center">
                                                <div class="card-block">
                                                    <blockquote class="card-blockquote">
                                                        <p class="hnf-card-info-title"><i class="material-icons">format_list_numbered</i>Hợp Đồng Trong Tháng</p>
                                                        <h1 class="hnf-card-info-number">@ViewBag.InMonth</h1>
                                                    </blockquote>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6 mb-2 mb-sm-0">
                                        <div class="card-deck">
                                            <div class="card card-success text-center">
                                                <div class="card-block">
                                                    <blockquote class="card-blockquote">
                                                        <p class="hnf-card-info-title"><i class="material-icons">done</i>Hợp Đồng Đã Kí</p>
                                                        <h1 class="hnf-card-info-number">@ViewBag.Success</h1>
                                                    </blockquote>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="row">
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6 mb-2 mb-sm-0">
                                        <div class="card-deck">
                                            <div class="card card-danger text-center">
                                                <div class="card-block">
                                                    <blockquote class="card-blockquote">
                                                        <p class="hnf-card-info-title"><i class="material-icons">cancel</i>Hợp Đồng Thất Bại</p>
                                                        <h1 class="hnf-card-info-number">@ViewBag.Failed</h1>
                                                    </blockquote>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6 mb-2 mb-sm-0">
                                        <div class="card-deck">
                                            <div class="card card-warning text-center">
                                                <div class="card-block">
                                                    <blockquote class="card-blockquote">
                                                        <p class="hnf-card-info-title"><i class="material-icons">hourglass_empty</i>Hợp Đồng Đang Chờ</p>
                                                        <h1 class="hnf-card-info-number">@ViewBag.Waiting</h1>
                                                    </blockquote>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <!-- dataset test on demo -->

            <div class="row">
                <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card form-input-margin" id="container-1" style="min-width: 100% ; height: 400px; max-width: 600px; margin: 0 auto"></div>
                    <input id="contractsuccess" value="@ViewBag.Success" hidden disabled></input>
                    <input id="contractfailed" value="@ViewBag.Failed" hidden disabled></input>
                    <input id="contractwaiting" value="@ViewBag.Waiting" hidden disabled></input>
                    <input id="contractyear" value="@ViewBag.Year" hidden disabled></input>
                    <input id="contractmonth" value="@ViewBag.Month" hidden disabled></input>
                </div>
                <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card form-input-margin" id="container-2" style="min-width: 100%; height: 400px; max-width: 600px; margin: 0 auto"></div>
                    <input id="january" value="@ViewBag.january" hidden disabled></input>
                    <input id="february" value="@ViewBag.february" hidden disabled></input>
                    <input id="march" value="@ViewBag.march" hidden disabled></input>
                    <input id="april" value="@ViewBag.april" hidden disabled></input>
                    <input id="may" value="@ViewBag.may" hidden disabled></input>
                    <input id="june" value="@ViewBag.june" hidden disabled></input>
                    <input id="july" value="@ViewBag.july" hidden disabled></input>
                    <input id="august" value="@ViewBag.august" hidden disabled></input>
                    <input id="september" value="@ViewBag.september" hidden disabled></input>
                    <input id="october" value="@ViewBag.october" hidden disabled></input>
                    <input id="november" value="@ViewBag.november" hidden disabled></input>
                    <input id="december" value="@ViewBag.december" hidden disabled></input>
                    <input id="contractyearline" value="@ViewBag.YearLine" hidden disabled></input>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function ($) {
        var url = window.location.href;
        var activePage = url;
        $('.sidebar-nav a').each(function () {
            var linkPage = this.href;

            if (activePage == linkPage) {
                $(this).closest("li").addClass("sidebar-active");
            }
        });
    });
</script>
