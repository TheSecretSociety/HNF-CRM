                                    <div class="col-xl-2 col-lg2 col-md-2 col-sm-2 col-xs-2">
                                        <div class="progress hnf-progress-bg">
                                            <div class="progress-bar progress-bar-striped hnf-bg-production-bar" role="progressbar" id="progress6" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                            </div>
                                        </div>
                                        <br>
                                        <div class="form-check">
                                            <label class="custom-control custom-checkbox">
                                                <input type="checkbox" id="check6" class="custom-control-input" name="delivery" value="@Model.Productline.Delivery" @(Model.Productline.Delivery.Value ? "checked=\"checked\"" : "") disabled>
                                                <span class="custom-control-indicator"></span>
