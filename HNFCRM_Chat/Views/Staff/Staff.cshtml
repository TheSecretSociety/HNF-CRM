@model IEnumerable<HNFCRM_Chat.Models.STAFF>

<div id="page-content-wrapper">
    <div class="page-content">
        <div class="container-fluid">
            <br>
            <!-- Thanh Chức Năng -->
            <div class="row">
                <!-- Nút Chức Năng -->
                <div class="col-xl-4 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card form-input-margin">
                        <!-- Nhóm nút chức năng -->
                        <div class="btn-group" role="group" aria-label="Function Button">
                            <!-- Nút Thêm (dùng dưới lệnh <a> để bấm liên kết hoặc có thể đổi sang <button>) -->
                            <a href="HNF-Employee-AddEmployee.html" class="btn btn-success w-100" role="button">Thêm</a>
                            <!-- Nút Xoá -->
                            <button type="button" class="btn btn-danger w-100">Xoá</button>
                        </div>
                    </div>
                </div>
                <!-- Thanh Lọc -->
                <div class="col-xl-8 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card form-input-margin">
                        <div class="row">
                            <!-- Phân Quyền (Dropdown) -->
                            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-xs-12">
                                <div class="dropdown">
                                    <!-- Nút dropdown -->
                                    <button class="btn btn-secondary dropdown-toggle w-100" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Phân Quyền
                                    </button>
                                    <!-- các nội dung trong dropdown -->
                                    <div class="dropdown-menu w-100" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" href="#">Nhân Viên Bán Hàng</a>
                                        <a class="dropdown-item" href="#">Tư Vấn Khách Hàng</a>
                                        <a class="dropdown-item" href="#">Quản Lí Sản Xuất</a>

                                    </div>
                                </div>
                            </div>
                            <!-- trường tìm Kiếm và nút tìm kiếm -->
                            <div class="col-xl-9 col-lg-12 col-md-12 col-sm-12 col-xs-12 mb-2 mb-xl-0">
                                <div class="row">
                                    <!-- Search Bar -->
                                    <div class="col-xl-8 col-lg-12 col-md-12 col-sm-12 col-xs-12 mb-2 mb-xl-0">
                                        <div class="input-group">
                                            <input type="text" class="form-control" placeholder="Tìm Kiếm...">
                                        </div>
                                    </div>
                                    <!-- Search Button -->
                                    <div class="col-xl-4 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <button type="button" class="btn btn-block btn-warning search-button">Tìm Kiếm<i class="material-icons md-18">search</i></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br>
            <!-- Bản Khách Hàng -->
            <div class="row">
                <div class="col-12">
                    <!-- Bản Khách Hàng -->
                    <table class="table table-sm table-hover">
                        <thead class="thead">
                            <tr id="employee-table-row">
                                <th>
                                    <input type="checkbox" aria-label="Checkbox for following text input">
                                </th>
                                <th>HỌ VÀ TÊN</th>
                                <th>ĐIỆN THOẠI</th>
                                <th>EMAIL</th>
                                <th>PHÂN QUYỀN</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <th scope="row">
                                    <input type="checkbox" aria-label="Checkbox for following text input">
                                </th>
                                <td>@item.Name</td>
                                <td>@item.Phone</td>
                                <td>@item.Email</td>
                                <td>@item.ROLE.Role1</td>

                                <td><a href="@Url.Action("StaffDetail","Staff",new {id=item.ID })"><button type="button" class="btn btn-sm btn-info">i</button></a></td>
                            </tr>
                            }
                        </tbody>
                    </table>
                    <!-- Phần nút chuyển  -->
                    <nav aria-label="Page navigation example">
                        <ul class="pagination justify-content-center">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>