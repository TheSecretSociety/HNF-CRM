@using HNFCRM_Chat.Models
@model STAFF

<div id="page-content-wrapper">
    <div class="page-content">
        <div class="container-fluid">
            <br>
            <div class="row">
                <div class="col-xl-12">
                    <div class="card form-input-margin">
                        <div class="row">
                            <!-- cột trái  -->
                            @using (Html.BeginForm("StaffDetail", "Staff", FormMethod.Post))
                            {

                                <div class="card form-input-margin">
                                    <div class="row">
                                        <!-- Cot trai -->
                                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-sx-4">
                                            <h5>Thông Tin Nhân Viên</h5>
                                            <br>
                                            <!-- Avatar -->
                                            <div class="col-xl-12">
                                                <div class="avatarwrapper">
                                                    <div class="avatar">
                                                        <img src="./image/avatar2.jpg" alt="..." class="img-fluid rounded-circle center-cropped mx-auto d-block ">
                                                    </div>
                                                </div>
                                            </div>
                                            <br>
                                            <!-- Nút Đổi Avatar -->
                                            <div class="col-xl-12">
                                                <div class="avatarbutton">
                                                    <button type="button" name="button" class="btn btn-primary">Đổi Ảnh Đại Diện</button>
                                                </div>
                                            </div>

                                        </div>
                                        <!-- Cot phai -->
                                        <div class="col-xl-8 col-lg-8 col-md-8 col-sm-8 col-sx-8">
                                            <div class="row">
                                                <div class="col-xl-6">
                                                    <!-- Họ Tên -->
                                                    <div class="form-group">
                                                        <label for="InputName">Họ Tên</label>
                                                        <input type="text" class="form-control" id="InputName" aria-describedby="InputName" placeholder="" name="name" @Html.ValidationMessageFor(m => m.Name)>
                                                    </div>
                                                    <!-- Số Điện Thoại -->
                                                    <div class="form-group">
                                                        <label for="InputPhone">Số Điện Thoại</label>
                                                        <input type="text" class="form-control" id="InputPhone" aria-describedby="InputPhone" placeholder="" name="phone">
                                                    </div>
                                                    <!-- Phân Quyền -->
                                                    <div class="form-group">
                                                        <label for="InputAuthorize">Phân Quyền</label>
                                                        <select class="form-control" id="InputAuthorize" name="role">
                                                            <option>Quản Trị Viên</option>
                                                            <option>Nhân Viên Bán Hàng</option>
                                                            <option>Nhân Viên Chăm Sóc Khách Hàng</option>
                                                            <option>Quản lý Sản Xuất</option>
                                                        </select>
                                                    </div>
                                                    <br>
                                                    <a href="@Url.Action("AddStaff","Staff")" id="Employee-Save-Button" class="btn btn-success w-100">Lưu</a>
                                                </div>
                                                <div class="col-xl-6">
                                                    <!-- Email -->
                                                    <div class="form-group">
                                                        <label for="InputEmail">Email</label>
                                                        <input type="text" class="form-control" id="InputEmail" aria-describedby="InputEmail" placeholder="" name="email">
                                                    </div>
                                                    <!-- Mật Khẩu -->
                                                    <div class="form-group">
                                                        <label for="InputPassword">Mật Khẩu</label>
                                                        <input type="password" class="form-control" id="txt-input-password" aria-describedby="emailHelp" placeholder="" name="password">
                                                    </div>
                                                    <!-- Nhập Lại Mật Khẩu -->
                                                    <div class="form-group">
                                                        <label for="InputPasswordConfirm">Nhập Lại Mật Khẩu</label>
                                                        <input type="password" class="form-control" id="txt-input-password-confirm" aria-describedby="emailHelp" placeholder="" name="confirmpassword">
                                                    </div>
                                                    <!-- Các Nút chức năng -->
                                                    <br>
                                                    <a href="#" id="Cancle-Button" class="btn btn-danger w-100">Huỷ</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>