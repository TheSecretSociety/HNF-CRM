@model HNFCRM_Chat.Models.CustomerCareModel
@using PagedList;
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<head>
    <title>Chăm Sóc Khách Hàng</title>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
    <!-- Datetime Picker CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/js/bootstrap-datepicker.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/locales/bootstrap-datepicker.vi.min.js" integrity="sha256-TnMvef6AxT9fg6mNrTsZCgPDkU4g5EyB+tu66oLAI4U=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.6.4/css/bootstrap-datepicker.min.css">
    <!-- Google Icon CDN -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.bundle.js"></script>
    <script scr="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.js"></script>
    <!-- custom CSS & Jquery modify URL -->
    <link rel="stylesheet" href="~/Content/HNFStyle.css">
    <script src="~/Scripts/HNF-jquery.js" charset="utf-8"></script>
</head>

<div id="page-content-wrapper">
    <div class="page-content">
        <div class="container-fluid">
            <br>
            <!-- Thanh chức năng -->
            <div class="row">
                <div class="col-xl-12">
                    <div class="card form-input-margin">
                        <form action="@Url.Action("Search","CustomerCare")" method="post">
                            <div class="row">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12 mb-2 mb-xl-0">
                                    <div class="row">
                                        <!-- Search Bar -->

                                        <div class="col-xl-8 col-lg-8 col-md-12 col-sm-12 col-xs-12">
                                            <div class="input-group">
                                                <input type="text" class="form-control" name="search" placeholder="Tìm Kiếm...">
                                            </div>
                                        </div>
                                        <!-- Search Button -->
                                        <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-xs-12">
                                            <div class="input-group">
                                                <button type="submit" class="btn btn-block btn-warning search-button" href="@Url.Action("Search","CustomerCare")">
                                                    Tìm Kiếm<i class="material-icons md-18">search</i>
                                                </button>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </form>
                        <!-- Thanh tìm kiếm -->

                    </div>


                </div>
            </div>
            <br>
            <!-- Bảng Khách Hàng (thông tin được lấy từ trang khách hàng, trên này chỉ thể hiện lại) -->
            <div class="row">
                <div class="col-12">
                    <table class="table table-sm table-hover">
                        <thead class="thead">
                            <tr>
                                <th>HỌ VÀ TÊN</th>
                                <th>CÔNG TY</th>
                                <th>ĐIỆN THOẠI</th>
                                <th>TỔNG ĐIỂM</th>
                                <th>XẾP LOẠI</th>
                                <th>MÃ HỢP ĐỒNG</th>
                                <th>TÊN SALE</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{if (Model.customer != null)
                                {
                                    foreach (var item in Model.customer)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.Company</td>
                                            <td>@item.Phone</td>
                                            @{ var customercare = Model.customercare.Where(x => x.ID_Customer == item.ID).SingleOrDefault();
                                                var customercaredetail = Model.customercaredetail.Where(x => x.ID_CustomerCare == customercare.ID).SingleOrDefault();
                                            }
                                            @{ if (customercaredetail.Point != 0)
                                                {
                                                    <td>@customercaredetail.Point</td>
                                                }
                                                else
                                                {
                                                    <td>Chưa đánh giá</td>
                                                }
                                            }
                                            @{if (customercaredetail.Point < 30)
                                                {
                                                    <td>Kém</td>
                                                }
                                                else if (customercaredetail.Point < 60 && customercaredetail.Point > 30)
                                                {
                                                    <td>Trung Bình</td>
                                                }
                                                else if (customercaredetail.Point > 60 && customercaredetail.Point < 90)
                                                {
                                                    <td>Khá</td>
                                                }
                                                else if (customercaredetail.Point > 90)
                                                {
                                                    <td>Rất Tốt</td>
                                                }
                                                else
                                                {
                                                    <td>Chưa đánh giá</td>
                                                }
                                            }
                                            @{var contract = Model.contract.Where(x => x.ID_Customer == item.ID).SingleOrDefault(); }
                                            <td>@contract.ID</td>
                                            @{ var staff = Model.staff.Where(x => x.ID == contract.ID_Staff).FirstOrDefault();}
                                            <td>@staff.Name</td>
                                            <td><a href="@Url.Action("CustomerCareDetail", "CustomerCare", new { id = item.ID })"><button type="button" class="btn btn-sm btn-info">i</button></a></td>
                                        </tr>
                                                    }
                                                }
                            }
                        </tbody>
                    </table>
                    <div class="row">
                        <div style="margin:0 auto; color: black">
                            @Html.PagedListPager(Model.customer, page => Url.Action("CustomerCare", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function ($) {
        var url = window.location.href;
        var activePage = url;
        $('.sidebar-nav a').each(function () {
            var linkPage = this.href;
            if (activePage == linkPage) {
                $(this).closest("li").addClass("sidebar-active");
            }
        });
    });
</script>