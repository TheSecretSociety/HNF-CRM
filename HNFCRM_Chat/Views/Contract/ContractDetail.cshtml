@using HNFCRM_Chat.Models;
@model ContractDetailModel
<link rel="stylesheet" href="~/Content/HNFStyle.css">
<br>
<div class="container-fluid">
    <!-- Back Button -->
    <form method="post" action="@Url.Action("ContractDetail", "Contract")">
        <div class="row">
            <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-xs-2">
                <a class="btn btn-secondary btn-block" role="button" href="HNF-Customer-ContractDetail.html">Trở Về</a>
            </div>
        </div>
        <br>
        <!-- Thong Tin Co Ban & Quy Cach May -->

        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card-group">
                    <!-- Số Lượng -->
                    <div class="card">
                        <div class="card-block">
                            <h6 class="card-title">Số Lượng</h6>
                            <div class="input-group input-group-lg">
                                <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="quantity" value="@Model.contractdetail.Quantity">
                            </div>
                        </div>
                    </div>
                    <!-- Màu Áo -->
                    <div class="card">
                        <div class="card-block">
                            <h6 class="card-title">Màu Áo</h6>
                            <div class="input-group input-group-lg">
                                <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="color" value="@Model.contractdetail.ShirtColor">
                            </div>
                        </div>
                    </div>
                    <!-- Bo Tay, Bo Cổ -->
                    <div class="card">
                        <!--  -->
                        <div class="card-block">
                            <h6 class="card-title">Bo Tay, Bo Cổ</h6>
                            <div class="input-group input-group-lg">
                                <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="collararm" value="@Model.contractdetail.CollarArmAdjustment">
                            </div>
                        </div>
                    </div>
                    <!-- Phối -->
                    <div class="card">
                        <div class="card-block">
                            <h6 class="card-title">Phối</h6>
                            <div class="input-group input-group-lg">
                                <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="productdesign" value="@Model.contractdetail.ProductDesign">
                            </div>
                        </div>
                    </div>
                    <!-- Loại Vải -->
                    <div class="card">
                        <div class="card-block">
                            <h6 class="card-title">Loại Vải</h6>
                            <div class="input-group input-group-lg">
                                <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="fabric" value="@Model.contractdetail.FabricateStyle">
                            </div>
                        </div>
                    </div>
                </div>
                <br>
            </div>
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="row">
                        <div class="col-xl-2 col-lg-2 col-md-3 col-sm-12 col-xs-12">
                            <div class="card-block">
                                <h6 class="card-title">Quy Cách May</h6>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" id="sidecut"  type="checkbox">
                                        Xẻ Tà
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" value="">
                                        Viền Nách
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input class="form-check-input" type="checkbox" value="">
                                        Viền Tay
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-10 col-lg-10 col-md-9 col-sm-12 col-xs-12">
                            <div class="card-block">
                                <div class="form-group">
                                    <textarea class="form-control" id="exampleTextarea" rows="5" placeholder="Ghi Chú" name="note" value="@Model.contractdetail.Note"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <!-- Size Áo -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="card-block">
                        <div class="row">
                            <div class="col-xl-7 col-lg-7 col-md-12 col-sm-12 col-xs-12">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>S</th>
                                            <th>M</th>
                                            <th>L</th>
                                            <th>XL</th>
                                            <th>XXL</th>
                                            <th>XXXL</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <th scope="row">Nam</th>
                                            <td>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="mens" value="@Model.mensize.S">
                                                </div>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="menm" value="@Model.mensize.M">
                                                </div>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="menl" value="@Model.mensize.L">
                                                </div>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="menxl" value="@Model.mensize.XL">
                                                </div>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="menxxl" value="@Model.mensize.XXL">
                                                </div>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="menxxxl" value="@Model.mensize.XXXL">
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Nữ</th>
                                            <td>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="womens" value="@Model.womensize.S">
                                                </div>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="womenm" value="@Model.womensize.M">
                                                </div>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="womenl" value="@Model.womensize.L">
                                                </div>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="womenxl" value="@Model.womensize.XL">
                                                </div>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="womenxxl" value="@Model.womensize.XXL">
                                                </div>
                                            </td>
                                            <td>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" placeholder="" aria-describedby="basic-addon1" name="womenxxxl" value="@Model.womensize.XXXL">
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-xl-5 col-lg-5 col-md-12 col-sm-12 col-xs-12">
                                <textarea class="form-control" id="exampleTextarea" rows="8" placeholder="Ghi Chú size áo" name="notesize" value="@Model.contractdetail.NoteSize"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <!-- In & Thêu -->
        <div class="row">
            <!-- In -->
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <div class="card">
                    <div class="card-block">
                        <h3 class="card-title">In</h3>
                        <div class="row">
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <!-- datetime -->
                                <div id="sandbox-container">
                                    <div class="input-group date">
                                        <input type="text" class="form-control" placeholder="Ngày Thực Hiện(dd-mm-yyyy)">
                                        <div class="input-group-addon"><i class="material-icons" style="margin:0; padding:0;">date_range</i></div>
                                    </div>
                                </div>
                                <br>
                                <!--  -->
                                <div class="input-group">
                                    <input type="text" class="form-control" id="inputExample" aria-describedby="basic-addon3" placeholder="Đơn vị thực hiện" name="printunit" value="@Model.contractdetail.PrintMakingUnit">
                                </div>
                                <br>
                                <!--  -->
                                <div class="input-group">
                                    <input type="text" class="form-control" id="inputExample" aria-describedby="basic-addon3" placeholder="Vị Trí" name="printspot" value="@Model.contractdetail.PrintSpot">
                                </div>
                                <br>
                                <!--  -->
                                <div class="input-group">
                                    <input type="text" class="form-control" id="inputExample" aria-describedby="basic-addon3" placeholder="Kích thước chi tiết" name="printsize" value="@Model.contractdetail.PrintSpot">
                                </div>
                                <br>
                            </div>
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <!-- Datetime -->
                                <div id="sandbox-container">
                                    <div class="input-group date">
                                        <input type="text" class="form-control" placeholder="Ngày Hoàn Thành (dd-mm-yyyy)">
                                        <div class="input-group-addon"><i class="material-icons" style="margin:0; padding:0;">date_range</i></div>
                                    </div>
                                </div>
                                <br>
                                <div class="form-group">
                                    <textarea class="form-control" id="exampleTextarea" rows="7" placeholder="Ghi Chú" name="printnote" value="@Model.contractdetail.PrintNote"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Theu -->
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6">
                <div class="card">
                    <div class="card-block">
                        <h3 class="card-title">Thêu</h3>
                        <div class="row">
                            <!-- cot trái -->
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <!-- datetime -->
                                <div id="sandbox-container">
                                    <div class="input-group date">
                                        <input type="text" class="form-control" placeholder="Ngày Thực Hiện(dd-mm-yyyy)">
                                        <div class="input-group-addon"><i class="material-icons" style="margin:0; padding:0;">date_range</i></div>
                                    </div>
                                </div>
                                <br>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="inputExample" aria-describedby="basic-addon3" placeholder="Đơn vị thực hiện" name="embroiderunit" value="@Model.contractdetail.EmbroiderMakingUnit">
                                </div>
                                <br>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="inputExample" aria-describedby="basic-addon3" placeholder="Vị Trí" name="embroiderspot" value="@Model.contractdetail.EmbroiderSpot">
                                </div>
                                <br>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="inputExample" aria-describedby="basic-addon3" placeholder="Kích thước chi tiết" name="embroidersize" value="@Model.contractdetail.EmbroiderSize">
                                </div>
                                <br>
                            </div>
                            <!-- cot phải -->
                            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6">
                                <!-- datetime -->
                                <div id="sandbox-container">
                                    <div class="input-group date">
                                        <input type="text" class="form-control" placeholder="Ngày Hoàn Thành(dd-mm-yyyy)">
                                        <div class="input-group-addon"><i class="material-icons" style="margin:0; padding:0;">date_range</i></div>
                                    </div>
                                </div>
                                <br>
                                <div class="form-group">
                                    <textarea class="form-control" id="exampleTextarea" rows="7" placeholder="Ghi Chú" name="embroidernote" value="@Model.contractdetail.EmbroiderNote"></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <!-- Production Line -->
        <div class="row">
            <div class="col-xl-12 col-lg12 col-md-12 col-sm-12 col-xs-12">
                <div class="card card-warning text-center">
                    <div class="card-block">
                        <div class="row">
                            <!-- Quy Trình Cắt Vải -->
                            <div class="col-xl-2 col-lg2 col-md-2 col-sm-2 col-xs-2">
                                <div class="progress hnf-progress-bg">
                                    <div class="progress-bar progress-bar-striped hnf-bg-production-bar" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                                <br>
                                <h5>Quy Trình Cắt Vải</h5>
                            </div>
                            <!-- Quy Trình In/Thêu -->
                            <div class="col-xl-2 col-lg2 col-md-2 col-sm-2 col-xs-2">
                                <div class="progress hnf-progress-bg">
                                    <div class="progress-bar progress-bar-striped hnf-bg-production-bar" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                                <br>
                                <h5>Quy Trình In/Thêu</h5>

                            </div>
                            <!-- Quy Trình May -->
                            <div class="col-xl-2 col-lg2 col-md-2 col-sm-2 col-xs-2">
                                <div class="progress hnf-progress-bg">
                                    <div class="progress-bar progress-bar-striped hnf-bg-production-bar" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                                <br>
                                <h5>Quy Trình May</h5>
                            </div>
                            <!-- Quy Trình Ủi -->
                            <div class="col-xl-2 col-lg2 col-md-2 col-sm-2 col-xs-2">
                                <div class="progress hnf-progress-bg">
                                    <div class="progress-bar progress-bar-striped hnf-bg-production-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                                <br>
                                <h5>Quy Trình Ủi</h5>

                            </div>
                            <!-- Quy Trình Đóng Gói -->
                            <div class="col-xl-2 col-lg2 col-md-2 col-sm-2 col-xs-2">
                                <div class="progress hnf-progress-bg">
                                    <div class="progress-bar progress-bar-striped hnf-bg-production-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                                <br>
                                <h5>Quy Trình Đóng Gói</h5>

                            </div>
                            <!-- Quy Trình Giao Hàng -->
                            <div class="col-xl-2 col-lg2 col-md-2 col-sm-2 col-xs-2">
                                <div class="progress hnf-progress-bg">
                                    <div class="progress-bar progress-bar-striped hnf-bg-production-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
                                    </div>
                                </div>
                                <br>
                                <h5>Quy Trình Giao Hàng</h5>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br>
        <!-- functionButtons -->
        <div class="row">
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6 col-6">
                <button type="submit" class="btn btn-success btn-block" id="DetailDesign-Add-Button" role="button" href="@Url.Action("ContractDetail","Contract")">Lưu Thông Tin</button>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6 col-6 ">
                <a class="btn btn-danger btn-block" id="Cancle-Button" role="button" href="#">Huỷ Thông Tin</a>
            </div>
        </div>
        <br>
    </form>
</div>
}
