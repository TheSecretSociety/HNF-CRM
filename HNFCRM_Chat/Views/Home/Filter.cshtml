<link rel="stylesheet" href="~/Content/HNFStyle.css">
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@model HNFCRM_Chat.Models.HomeModel
@using PagedList;
@using PagedList.Mvc;

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Trang Chủ</title>
</head>
<div id="page-content-wrapper">
    <div class="page-content">
        <div class="container-fluid">
            <br>
            <!-- card thông tin nhanh -->
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6 mb-2 mb-sm-0">
                            <div class="card-deck">
                                <div class="card card-info text-center">
                                    <div class="card-block">
                                        <blockquote class="card-blockquote">
                                            <p class="hnf-card-info-title"><i class="material-icons">format_list_numbered</i>Hợp Đồng Trong Năm</p>
                                            <h1 class="hnf-card-info-number">@ViewBag.InMonth</h1>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6 mb-2 mb-sm-0">
                            <div class="card-deck">
                                <div class="card card-success text-center">
                                    <div class="card-block">
                                        <blockquote class="card-blockquote">
                                            <p class="hnf-card-info-title"><i class="material-icons">done</i>Hợp Đồng Đã Kí</p>
                                            <h1 class="hnf-card-info-number">@ViewBag.Success</h1>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-12">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6 mb-2 mb-sm-0">
                            <div class="card-deck">
                                <div class="card card-danger text-center">
                                    <div class="card-block">
                                        <blockquote class="card-blockquote">
                                            <p class="hnf-card-info-title"><i class="material-icons">cancel</i>Hợp Đồng Thất Bại</p>
                                            <h1 class="hnf-card-info-number">@ViewBag.Failed</h1>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-xs-6 mb-2 mb-sm-0">
                            <div class="card-deck">
                                <div class="card card-warning text-center">
                                    <div class="card-block">
                                        <blockquote class="card-blockquote">
                                            <p class="hnf-card-info-title"><i class="material-icons">hourglass_empty</i>Hợp Đồng Đang Chờ</p>
                                            <h1 class="hnf-card-info-number">@ViewBag.Waiting</h1>
                                        </blockquote>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <br>
            <!-- bảng khách hàng -->
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-sx-12">
                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs w-100" role="tablist">
                        <li class="nav-item w-100">
                            <a class="nav-link hnf-navtab-font " data-toggle="tab" onclick="location.href='@Url.Action("Index", "Home")'" role="tab">KHÁCH HÀNG MỚI</a>
                        </li>
                        <li class="nav-item w-100">
                            <a class="nav-link hnf-navtab-font @ViewBag.OnProgressStatus" data-toggle="tab" onclick="location.href='@Url.Action("Filter", "Home", new { type="OnProgress" })'" role="tab">ĐƠN HÀNG ĐANG SẢN XUẤT</a>
                        </li>
                        <li class="nav-item w-100">
                            <a class="nav-link hnf-navtab-font @ViewBag.SuccessStatus" data-toggle="tab" onclick="location.href='@Url.Action("Filter", "Home", new { type="Success" })'" role="tab">ĐƠN HÀNG ĐÃ THỰC HIỆN</a>
                        </li>
                        <li class="nav-item w-100">
                            <a class="nav-link hnf-navtab-font @ViewBag.FailedStatus" data-toggle="tab" onclick="location.href='@Url.Action("Filter", "Home", new { type="Failed" })'" role="tab">ĐƠN HÀNG THẤT BẠI</a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div class="tab-pane active" id="home" role="tabpanel">
                            <table class="table table-sm table-hover">
                                <thead class="thead">
                                    <tr>
                                        @*<th>#</th>*@
                                        <th>HỌ VÀ TÊN</th>
                                        <th>CÔNG TY</th>
                                        <th>EMAIL</th>
                                        <th>ĐIỆN THOẠI</th>
                                        <th>TƯ VẤN</th>
                                        <th>GỌI NHẮC</th>
                                        <th>TÊN SALE</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{if (Model != null)
                                        {
                                            foreach (var item in Model.customer)
                                            {

                                                <tr>
                                                    @*<th scope="row">@item.ID</th>*@
                                                    <td>@item.Name</td>
                                                    <td>@item.Company</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.Phone</td>
                                                    @{ if (item.ID_Consult.Value == 1)
                                                        {
                                                            <td>Gọi Điện Thoại</td>
                                                        }
                                                        else if (item.ID_Consult.Value == 2)
                                                        {
                                                            <td>Gửi Email</td>
                                                        }
                                                        else if (item.ID_Consult.Value == 3)
                                                        {
                                                            <td>Gặp Mặt</td>
                                                        }
                                                        else
                                                        {
                                                            <td>Gửi Mẫu</td>
                                                        }
                                                    }
                                                    @{var contract = Model.Contract.Where(x => x.ID_Customer == item.ID).Single();}
                                                    @{if (int.Parse(contract.Remind) == 0)
                                                        {
                                                            <td>Lần 1</td>
                                                        }
                                                        else if (int.Parse(contract.Remind) == 1)
                                                        {
                                                            <td>Lần 2</td>
                                                        }
                                                        else if (int.Parse(contract.Remind) == 2)
                                                        {
                                                            <td>Lần 3</td>
                                                        }
                                                        else
                                                        {
                                                            <td>Chưa Gọi</td>
                                                        }
                                                    }
                                                    @{var staff = Model.Staff.Where(x => x.ID == contract.ID_Staff).FirstOrDefault();}
                                                    <td>@staff.Name</td>
                                                </tr>
                                                            }
                                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div style="margin:0 auto; color: black">
                            @Html.PagedListPager(Model.customer, page => Url.Action("Filter", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function ($) {
            var url = window.location.href;
            var activePage = url;
            $('.sidebar-nav a').each(function () {
                var linkPage = this.href;

                if (activePage == linkPage) {
                    $(this).closest("li").addClass("sidebar-active");
                }
            });
        });
    </script>
