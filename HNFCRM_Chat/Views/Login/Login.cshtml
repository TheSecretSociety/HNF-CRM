@*Prevent user press back when login in system*@
<script>
    function preventBack() { window.history.forward(); }
    setTimeout("preventBack()", 0);
    window.onunload = function () { null };
</script>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    @using (Html.BeginForm("Login", "Login", FormMethod.Post))
    {
        <div class="login-wrapper">
            <div class="login-form">
                <!-- Tiêu đề -->
                <div class="login-form-title">
                    <h3>HNF COMPANY</h3>
                </div>
                @if (TempData["notice"] != null)
                {
                    <p style="color:red">@TempData["notice"]</p>
                }
                <form class="" action="" method="post">
                    <div class="container">
                        <!-- Email -->
                        <div class="row">
                            <div class="input-group">
                                <input class="input-control" type="email" id="TxtLoginID" name="Email" placeholder="email" autocomplete="off" required>
                                <span class="input-group-addon hnf-input-group-addon" id="basic-addon2"><i class="material-icons md-light md-18">mail_outline</i></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="IDError">
                            </div>
                        </div>
                        <!-- Password -->
                        <div class="row">
                            <div class="input-group">
                                <input class="input-control" type="password" id="TxtLoginPassword" name="Password" placeholder="password" autocomplete="off" required="">
                                <span class="input-group-addon hnf-input-group-addon" id="basic-addon2"><i class="material-icons md-light md-18">lock_outline</i></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="PasswordError">
                            </div>
                        </div>
                        <!-- Nút Login -->
                        <div class="row">
                            <button name="LoginButton" type="submit" id="LoginButton" class="btn hnf-button-control" href='@Url.Action("Login", "Login")'>Login</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    }
</body>
</html>
